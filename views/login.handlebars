<section class="container">
  <div class="row">
    <div class="col-3"></div>
    <div class="col-9">
      <h1>Inicia sesión</h1>
      <form action="/api/users/authentication" method="post">
        <div class="row">
          <div class="col-6">
            <input
              type="email"
              placeholder="Email"
              aria-label="Email"
              name="email"
              id="email"
            />
          </div>
          <div class="col-6">
            <input
              type="password"
              placeholder="Contraseña"
              aria-label="Contraseña"
              name="password"
              id="password"
            />
          </div>
          <button type="submit">Iniciar sesión</button>
          <a href="/api/sessions/github" type="submit">Iniciar sesión con GitHub</a>
          <a href="/register">Regístrate</a>
        </div>
      </form>
    </div>
  </div>
</section>

<script src="js/login.js"></script>